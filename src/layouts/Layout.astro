---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Luxe Estates â€” Premium Real Estate",
  description = "Discover luxury apartments and premium properties. Find your dream home with Luxe Estates."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  <body class="bg-dark text-light">
    <slot />
    <script is:inline>
      (function() {
        var defined = false;
        function handleIdentity() {
          if (defined) return;
          defined = true;
          var identity = window.netlifyIdentity;
          if (!identity) return;

          identity.on("init", function(user) {
            if (!user) {
              identity.on("login", function() {
                document.location.href = "/admin/";
              });
            }
          });

          // Handle invite/confirmation/recovery tokens
          var hash = document.location.hash || "";
          if (hash.match(/(invite|confirmation|recovery)_token/)) {
            // Wait for widget to be fully ready, then open signup
            setTimeout(function() {
              identity.open("signup");
            }, 500);
          }
        }

        // Try immediately and also on load
        handleIdentity();
        window.addEventListener("load", handleIdentity);
      })();
    </script>
  </body>
</html>
